<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/deal_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_png_1114185"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/menyaka"
                        android:id="@+id/shop_img"
                        app:civ_border_width="1dp"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/colorPrimary"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sponsored Ad"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="8sp"
                        android:id="@+id/sponsorTV"
                        android:layout_alignParentEnd="true"
                        tools:ignore="SmallSp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add_shopping_cart_24"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/sponsorTV"
                        android:id="@+id/sponsorAddToCart"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Cuban Linx"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:id="@+id/date" />

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Braai Pack"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        tools:ignore="SmallSp"
                        android:layout_below="@+id/date" />

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Now: M 5.00"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:layout_below="@+id/item_name"
                        android:textColor="@color/colorPrimaryDark"/>

                    <RatingBar
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="3"
                        android:layout_below="@id/discount"
                        android:layout_centerHorizontal="true"
                        android:rating="2.5"
                        android:theme="@style/RatingBar"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>